{% extends 'base.html.twig' %}

{% block title %}Espace Administrateur{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4 text-primary">Tableau de bord Administrateur</h1>
        <p class="text-center text-secondary mb-5">Bienvenue dans votre espace de gestion. Vous pouvez gérer les employés, visualiser les statistiques de la plateforme.</p>

        <div class="row mb-5">
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="card-title text-center">Crédits totaux de la plateforme</h2>
                        <h2 class="text-center text-success mt-3">{{ totalCredits }} €</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="card-title text-center">Nombre de covoiturage par jour</h2>
                        <canvas id="tripsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="card-title text-center">Crédits gagnés par jour</h2>
                        <canvas id="creditsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow-sm mb-5">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Gestion des comptes</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Créer un compte employé</h2>
                        <form action="{{ path('app_admin_create_employee') }}" id="createEmployeeForm" methods="POST">
                            <button type="submit" class="btn btn-primary mt-3">Cfréer l'employé</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <h2>Suspendre un compte</h2>
                        <form action="{{ path('app_admin_suspend_account') }}" id="suspendAccountForm" methods="POST">
                            <div class="mb-3">
                                <label for="userId" class="form-label">ID de l'utilisateur ou de l'employé</label>
                                <input type="text" class="form-control" id="userId" required>
                            </div>
                            <button type="submit" class="btn btn-danger mt-3">Suspendre le compte</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}