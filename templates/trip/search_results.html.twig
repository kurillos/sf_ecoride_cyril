{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Résultats de la recherche</h1>

        <div class="row align-items-end mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="electricVehicle" name="electricVheicle">
                    <label for="electricVehicle" class="form-check-label">Véhicule écologique :</label>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 mb-3">
                <label class="form-label" for="minPrice">Prix :</label>
                <div class="d-flex align-items-center mb-2">
                    <input type="number" id="minPrice" value="0" min="0" max="500" class="form-control price-field">
                    <span>€ - </span>
                    <input type="text" id="maxPrice" value="500" min="0" max="500" class="form-control price-field">
                    <span>€</span>
                </div>
                <div id="priceSlider" class="mt-2 mb-3"></div>
            </div>

            <div class="col-md-4 col-sm-6 mb-3">
                <label class="form-label" for="minDuration">Durée du trajet (heures) :</label>
                <div class="d-flex align-items-center mb-2">
                    <input type="number" id="minDuration" value="0" min="0" max="24" class="form-control duration-field">
                    <span>h - </span>
                    <input type="number" id="maxDuration" value="24" min="0" max="24" class="form-control duration-field">
                    <span>h</span>
                </div>
                <div id="durationSlider" class="mt-2 mb-3"></div>
            </div>

            <div class="col-md-3 col-sm-6 mb-3">
                <label class="form-label">Note minimal du chauffeur :</label>
                <div id="ratingStars" class="star-rating">
                </div>
                <input type="hidden" id="minRating" value="0">
            </div>

            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary m-3">Appliquer les filtres</button>
            </div>
        </div>
    </div>


        {% if trips %}
            <div class="row">
                {% for trip in trips %}
                    <div class="col-md-4 mb-4">
                        <div class="card {% if trip.vehicle.isElectric %}border-success{% endif %}">
                            <div class="card-body">
                                {% if trip.vehicle.isElectric %}
                                    <span class="badge bg-success mb-2">Véhicule électrique</span>
                                {% endif %}
                                <h5 class="card-title text-success">{{ trip.departureLocation }} &rarr; {{ trip.destinationLocation }}</h5>
                                <p class="card-text"><strong>Véhicule:</strong> {{ trip.vehicle.brand }} {{ trip.vehicle.model }}</p>
                                <p class="card-text"><strong>Énergie:</strong> {% if trip.vehicle.isElectric %}Électrique{% else %}Thermique{% endif %}</p>
                                <p class="card-text">Départ: {{ trip.departureTime|date('d/m/Y H:i') }}</p>
                                <p class="card-text">Prix: {{ trip.pricePerSeat }} crédits</p>
                                <a href="{{ path('app_trip_show', {'id': trip.id}) }}" class="btn btn-primary">Voir le trajet</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <p>Aucun covoiturage trouvé pour votre recherche.</p>
                <p>Souhaitez-vous <a href="{{ path('app_trip_new', {'departure': departure, 'destination': destination, 'date': date}) }}">proposer un nouveau trajet</a> ?</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
