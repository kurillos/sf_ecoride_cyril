{% extends 'base.html.twig' %}

{% block title %}Détails du covoiturage{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails du covoiturage</h1>

        <div class="card {% if trip.vehicle.isElectric %}border-success{% endif %}">
            <div class="card-header">
                De : {{ trip.departureLocation }} à {{ trip.destinationLocation }}
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <img src="{{ vich_uploader_asset(trip.driver, 'profilePictureFile') | default(asset('images/default-profile-picture.jpg')) }}" alt="Photo de profil de {{ trip.driver.pseudo }}" class="rounded-circle me-3" width="80" height="80">
                    <div>
                        <h5 class="card-title mb-0">Proposé par : {{ trip.driver.pseudo }}</h5>
                        {% set avgRating = trip.driver.getAverageRating() %}
                        <div class="d-flex align-items-center justify-content-start gap-1 col-lg-6">
                            {% if avgRating is not null %}
                                {% set roundedRating = avgRating|round(0, 'floor') %}
                                {% for i in 1..5 %}
                                    {% if i <= roundedRating %}
                                        <i class="bi bi-star-fill text-success"></i>
                                    {% else %}
                                        <i class="bi bi-star text-secondary"></i>
                                    {% endif %}
                                {% endfor %}
                                <small class="text-muted ms-2"> ({{ trip.driver.reviewsReceived|length }} avis)</small>
                            {% else %}
                                <span class="badge bg-secondary">Nouveau conducteur</span>
                            {% endif %}
                        </div>
                        </p>
                    </div>
                </div>
                {% if trip.vehicle.isElectric %}
                    <span class="badge bg-success mb-3">Véhicule électrique</span>
                {% endif %}
                <p class="card-text"><strong>Véhicule:</strong> {{ trip.vehicle.brand }} {{ trip.vehicle.model }}</p>
                <p class="card-text"><strong>Énergie:</strong> {% if trip.vehicle.isElectric %}Électrique{% else %}Thermique{% endif %}</p>
                <p class="card-text"><strong>Date et heure de départ :</strong> {{ trip.departureTime|date('d/m/Y H:i') }}</p>
                <p class="card-text"><strong>Date et heure d'arrivée :</strong> {{ trip.arrivalTime|date('d/m/Y H:i') }}</p>
                <p class="card-text"><strong>Places disponibles :</strong> {{ trip.getRemainingSeats() }}</p>
                <p class="card-text"><strong>Prix par place :</strong> {{ trip.pricePerSeat }} crédits</p>
                <p class="card-text"><strong>Description :</strong> {{ trip.description|default('Aucune description') }}</p>
                <p class="card-text"><strong>Fumeurs autorisés :</strong> {{ trip.isSmokingAllowed ? 'Oui' : 'Non' }}</p>
                <p class="card-text"><strong>Animaux autorisés :</strong> {{ trip.areAnimalsAllowed ? 'Oui' : 'Non' }}</p>

                <div class="row">
                    <div class="col-12 text-center">
                        {% if app.user %} {# User is logged in #}
                            {% if isDriver %}
                                {# Logic for the driver #}
                                {% if trip.status == 'scheduled' %}
                                    <form action="{{ path('app_trip_start', {'id': trip.id}) }}" method="post" style="display:inline-block;">
                                        <button type="submit" class="btn btn-success">Démarrer le covoiturage</button>
                                    </form>
                                    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}" class="btn btn-info mt-3" style="display:inline-block;">Modifier le covoiturage</a>
                                {% elseif trip.status == 'in_progress' %}
                                    <form action="{{ path('app_trip_complete', {'id': trip.id}) }}" method="post">
                                        <button type="submit" class="btn btn-primary">Arrivée à destination</button>
                                    </form>
                                {% elseif trip.status == 'completed' %}
                                    <span class="badge bg-success">Trajet terminé</span>
                                {% endif %}
                            {% else %} {# User is logged in, but not the driver #}
                                {% if isBooked %} {# User is a confirmed participant #}
                                    <span class="badge bg-secondary">Inscrit</span>
                                    {% if trip.status == 'completed' %}
                                        <div class="mt-3 d-flex justify-content-center">
                                            <a href="{{ path('app_trip_validate_good', {'trip': trip.id, 'userToRate': trip.driver.id}) }}" class="btn btn-success me-2">Covoiturage bien passé</a>
                                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#reportModal">Signaler un problème</button>
                                        </div>
                                    {% endif %}
                                {% else %} {# User is logged in, not the driver, and not booked #}
                                    {% if trip.status == 'scheduled' %}
                                        {% if hasRemainingSeats %}
                                            {% if hasEnoughCredits %}
                                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmBookingModal">Réserver</button>
                                            {% else %}
                                                <span class="badge bg-warning text-dark">Crédits insuffisants</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="badge bg-info">Complet</span>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        {% else %} {# User is not logged in #}
                            <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Connectez-vous pour participer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('app_trip_search') }}" class="btn btn-secondary mt-3">Retour à la recherche</a>
    </div>

    {# Modals pour les passagers #}
    {% if app.user and not isDriver and not isBooked and trip.status == 'scheduled' and hasRemainingSeats and hasEnoughCredits %}
        <div class="modal fade" id="confirmBookingModal" tabindex="-1" aria-labelledby="confirmBookingModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmBookingModalLabel">Confirmer la réservation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="{{ path('app_trip_book', {'id': trip.id}) }}" method="post">
                        <div class="modal-body">
                            <p>Vous êtes sur le point de réserver un siège pour ce trajet. Voulez-vous continuer ?</p>
                            <div class="form-group">
                                <label for="seats">Nombre de sièges:</label>
                                <input type="number" name="seats" id="seats" value="1" min="1" max="{{ trip.remainingSeats }}" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-success">Confirmer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
    {% if app.user and isBooked and trip.status == 'completed' %}
        <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="reportModalLabel">Signaler un problème</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="{{ path('app_trip_report_issue', {'id': trip.id}) }}" method="post">
                        <div class="modal-body">
                            <p>Si vous avez rencontré un problème durant ce trajet, veuillez le signaler ici.</p>
                            <div class="form-group">
                                <label for="issueDescription">Description du problème:</label>
                                <textarea name="issueDescription" id="issueDescription" class="form-control" rows="4" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-danger">Envoyer le signalement</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
